{
  "name": "ShriTask2",
  "version": "1.0.0",
  "description": "Yandex Smart House",
  "author": "Guseynov David",
  "license": "none",
  "private": true,
  "scripts": {
    "install-modules": "yarn install",
    "delete-modules": "rimraf ./node_modules",
    "clear-cache": "rimraf .cache/*",
    "start": "yarn clear-cache && parcel ./source/index.html",
    "build": "parcel build ./source/index.html --out-dir ./dist --no-minify",
    "lint": "eslint ./source/scripts/** && eslint ./source/styles/**"
  },
  "devDependencies": {
    "less": "^3.5.3",
    "parcel-bundler": "^1.9.4",
    "stylelint": "^7.12.0",
    "stylelint-config-standard": "^16.0.0"
  }
}
